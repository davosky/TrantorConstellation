<div class="row mt-3">
  <div class="col-8 offset-2 p-3 bg-white border-secondary shadow rounded">
    <div class="bg-white bg-white">
      <div class="pt-2 ps-3 pb-2">
        <h4 class="text-primary fw-bolder">
          <%= image_tag("reasons/reasons-reasons-logo.svg", class: "img-fluid", size: "56x56", alt: "reasons-reasons-logo") %>
          &emsp;
          Motivi Missione
          <span class="float-end">
            <%= link_to new_reason_path, data: { turbo: true, turbo_frame: 'modal' }, class: "btn btn-primary mt-3 me-3" do %>
              <i class="fa-solid fa-plus"></i>
              <i class="fa-solid fa-file-pen"></i>
              &emsp;
              Inserisci un Nuovo Motivo Missione
            <% end %>
          </span>
        </h4>
      </div>
      <hr class="text-primary pb-2"/>
      <div class="bg-white p-2">
        <div class="divTable utility-table">
          <div class="divTableHeading">
            <div class="divTableRow">
              <div class="divTableHead ps-2 text-primary fw-bold">
                <i class="fa-solid fa-file-pen"></i>
                &nbsp;
                Motivo Missione
              </div>
              <div class="divTableHead ps-2 text-primary fw-bold">
                <i class="fa-solid fa-arrow-up-9-1"></i>
                &nbsp;
                Posizione
              </div>
              <div class="divTableHead ps-2 text-primary fw-bold"></div>
              <div class="divTableHead ps-2 text-primary fw-bold"></div>
            </div>
          </div>
          <div class="divTableBody">
            <% @reasons.each do |reason| %>
              <div class="divTableRow">
                <div class="divTableCell p-2"><%= reason.name %></div>
                <div class="divTableCell p-2"><%= reason.position %></div>
                <div class="divTableCell p-2">
                  <%= link_to edit_reason_path(reason), data: { turbo: true, turbo_frame: 'modal' },
                              "data-bs-toggle": "tooltip",
                              "title": "Modifica il Record Corrente", class: "text-warning" do %>
                    <i class="fa-solid fa-pencil"></i>
                  <% end %>
                </div>
                <div class="divTableCell p-2">
                  <%= link_to confirm_delete_reason_path(reason), class: "text-danger" do %>
                    <i class="fa-solid fa-trash-can"></i>
                  <% end %>
                </div>
              </div>
            <% end %>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
</div>
