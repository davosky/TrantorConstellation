<div class="row mt-3">
  <div class="col-8 offset-2 p-3 bg-white border-secondary shadow rounded">
    <div class="card border border-0">
      <div class="card-header border-0">
        <span class="float-start fs-4 text-info fw-bold">
          <%= image_tag("reasons/reasons-reason-info-logo.svg", class: "img-fluid", size: "56x56", alt: "stats-logo") %>
          &nbsp;
          Motivo Missione
        </span>
        &emsp;
        <span class="float-end">
          <small class="text-secondary">
            codice identificativo:
            &emsp;
            <%= @reason.id %>
          </small>
        </span>
      </div>
      <div class="card-body">
        <ul class="list-group">
          <li class="list-group-item fs-5 fw-bold text-info">
            <i class="fa-solid fa-file-pen fs-5 fw-bold"></i>
            &nbsp;
            Motivo Missione
            <span class="fs-5 fw-bold text-dark float-end">
              <%= @reason.name %>
            </span>
          </li>
          <li class="list-group-item fs-5 fw-bold text-info">
            <i class="fa-solid fa-arrow-up-9-1"></i>
            &nbsp;
            Posizione
            <span class="fs-5 fw-bold text-dark float-end">
              <%= @reason.position %>
            </span>
          </li>
        </ul>
        <hr class="text-info"/>
        <%= link_to reasons_path, class: "btn btn-secondary" do %>
          Chiudi
        <% end %>
      </div>
    </div>
  </div>
</div>