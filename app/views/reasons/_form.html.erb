<%= form_with(model: reason) do |form| %>
  <% if reason.errors.any? %>
    <div style="color: red">
      <h4>
        Errore!&emsp;Non posso salvare per i seguenti motivi:
      </h4>
      <ul>
        <% reason.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>
  <div class="input-group mb-3 shadow">
    <span class="input-group-text input-group-text-fixed bg-primary text-white">
      <i class="fa-solid fa-file-pen"></i>
      &nbsp;
      <%= form.label :name %>
    </span>
    <%= form.text_field :name, class: 'form-control' %>
  </div>
  <div class="input-group mb-3 shadow">
    <span class="input-group-text input-group-text-fixed bg-primary text-white">
      <i class="fa-solid fa-arrow-up-9-1"></i>
      &nbsp;&nbsp;
      <%= form.label :position %>
    </span>
    <%= form.number_field :position, class: 'form-control' %>
  </div>
  <div class="d-grid">
    <%= form.submit class: 'btn btn-primary' %>
  </div>
<% end %>
