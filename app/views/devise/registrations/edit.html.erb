<div class="row mt-3">
  <div class="col-5 offset-3">
    <h4 class="text-primary fw-bold">
      <%= image_tag(registration_edit_gender_avatar(current_user), class: "img-fluid", size: "64x64", alt: "user-avatar-icon") %>
      &nbsp;
      <%= "#{current_user.name}".html_safe %>
    </h4>
    <hr class="text-primary mb-3"/>
    <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
      <%= render "devise/shared/error_messages", resource: resource %>
      <div class="field">
        <%= f.label :password %> <i>(lascia vuoto se non vuoi modificarla)</i><br />
        <%= f.password_field :password, autocomplete: "new-password", class: "form-control" %>
        <% if @minimum_password_length %>
          <br />
          <em><%= @minimum_password_length %> minimo caratteri</em>
        <% end %>
      </div>
      <div class="field">
        <%= f.label :password_confirmation %><br />
        <%= f.password_field :password_confirmation, autocomplete: "new-password", class: "form-control" %>
      </div>
      <div class="field">
        <%= f.label :current_password %> <i>(abbiamo bisogno della tua password attuale per confermare le modifiche)</i><br />
        <%= f.password_field :current_password, autocomplete: "current-password", class: "form-control" %>
      </div>
      <div class="d-grid mb-1 mt-1">
        <%= button_tag(type: "submit", class: "btn btn-primary mt-3") do %>
          <i class="fa-solid fa-arrow-right-to-bracket"></i>&nbsp;Aggiorna
        <% end %>
      </div>
    <% end %>
  </div>
</div>
